<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="java.com.example.jetpackdemo.ui.activity.compose.ComposeBaseActivity">

    <Button
        android:id="@+id/btn_include_compose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已有项目引入Compose"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/btn_compose_use_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="在Compose中使用View组件"
        />

</LinearLayout>